<div class="container" id="nav-container">
    <div class="responsive-navbar">
        <nav class="navbar navbar-expand-lg navbar-light bg-white">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div class="navbar-nav">
                    <a class="nav-item nav-link active" id="nav-text" href="mailto:info@appgenter.com"><i class="fas fa-envelope"></i><%= t '.mail' %></a>
                </div>
            </div>
            <ul class="navbar-nav ml-lg-auto">
            <% I18n.available_locales.each_with_index do |locale, index| %>
                <li class="nav-lang">
                <% if I18n.locale == locale %>
                    <%= t(locale, scope: 'locales', class: 'selected-locale') %>
                <% else %>
                    <%= link_to t(locale, scope: 'locales'), url_for(locale: locale), class: 'locale-link' %>
                <% end %>
                <% unless index == I18n.available_locales.size - 1 %>
                    |&nbsp; <!-- Add spaces and the separator "|" unless it's the last language -->
                <% end %>
                </li>
            <% end %>
            </ul>
            <ul class="navbar-nav ml-lg-auto">
                <li class="nav-item">
                    <a class="nav-link facebook-icon" href="https://www.facebook.com/" target="_blank"><i class="fab fa-facebook"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link instagram-icon" href="https://www.instagram.com/" target="_blank"><i class="fab fa-instagram"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link youtube-icon" href="https://www.youtube.com/" target="_blank"><i class="fab fa-youtube"></i></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link linkedin-icon" href="https://www.linkedin.com/" target="_blank"><i class="fab fa-linkedin"></i></a>
                </li>
            </ul>
        </nav>
    </div>
</div>
