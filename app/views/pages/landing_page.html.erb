<div class="section6-container">
    <div class="section6-child one">
        <div class="section6-subchild one">
            <div class="section6-innerchild one">
                <p><%= t '.section6_title' %></p>
            </div>
            <div class="section6-innerchild two">
                <p><%= t '.section6_desc' %></p>
            </div>
        </div>
        <div class="section6-subchild two">
            <%= form_with(model: @enquiry, url: enquiries_path) do |form| %>
                <div class="section6-inner two">
                    <div class="label">
                        <%= form.label :name, class: "inner-label" %>
                    </div>
                    <div class="field">
                        <%= form.text_field :name, class: "inner-field" %>
                    </div>
                </div>

                <div class="section6-inner two">
                    <div class="label">
                        <%= form.label :email, class: "inner-label" %>
                    </div>
                    <div class="field">
                        <%= form.text_field :email, class: "inner-field" %>
                    </div>
                </div>

                <div class="section6-inner two">
                    <div class="label">
                        <%= form.label :phone_number, class: "inner-label" %>
                    </div>
                    <div class="field">
                        <%= form.text_field :phone_number, class: "inner-field" %>
                    </div>
                </div>

                <div class="section6-inner two">
                    <div class="label">
                        <%= form.label :message, class: "inner-label" %>
                    </div>
                    <div class="field">
                        <%= form.text_area :message, class: "area-field" %>
                    </div>
                </div>

                <div class="actions">
                    <%= form.submit t('global.forms.submit'), class: "submit-button" %>
                </div>
            <% end %>
        </div>
    </div>
</div>